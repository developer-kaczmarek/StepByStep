<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StepByStep" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MenuItemTheme" parent="Theme.StepByStep">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/TextPrimaryLight</item>
    </style>

    <style name="ParamsTitleTheme" parent="Theme.StepByStep">
        <item name="fontFamily">@font/nunito_medium</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/TextPrimaryLight</item>
    </style>

    <style name="PointValueTextTheme" parent="Theme.StepByStep">
        <item name="fontFamily">@font/nunito_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/AccentDefaultLight</item>
        <item name="android:gravity">end</item>
    </style>

    <!--DefaultAlertDialogTheme-->
    <style name="DefaultAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/AccentDefaultLight</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DefaultAlertDialogTitleTheme</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DefaultAlertDialogBodyTheme</item>
        <item name="shapeAppearanceOverlay">@style/DefaultAlertDialogShapeAppearanceTheme</item>
        <item name="colorSurface">@color/BackgroundDefaultLight</item>
        <item name="buttonBarPositiveButtonStyle">@style/DefaultAlertDialogButtonsTheme</item>
        <item name="buttonBarNegativeButtonStyle">@style/DefaultAlertDialogButtonsTheme</item>
    </style>

    <style name="DefaultAlertDialogShapeAppearanceTheme" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="DefaultAlertDialogButtonsTheme" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/AccentDefaultLight</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/nunito_medium</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
    </style>

    <style name="DefaultAlertDialogTitleTheme" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/TextPrimaryLight</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="fontFamily">@font/nunito_medium</item>
    </style>

    <style name="DefaultAlertDialogBodyTheme" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/TextPrimaryLight</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>
    <!--DefaultAlertDialogTheme-->
</resources>